<div class = "container">
<h1 align='cemtre'>Create new categories section</h1>

<%= render 'shared/errors', obj: @section %>
<p>
  <p>

     <%= form_for(@section, :html => {class: "form-horizontal", role: "form"}) do |f| %>


     <div class='form-group row'>
       <div class='col-sm-8'>
            <%= f.label :name %>
        </div>
        <div class='col-sm-8 mb-4'>
            <%= f.text_field :name, class: 'form-control', placeholder: 'Job Section Name', autofocus: true %>
        </div>
      </div>

         <div class='form-group row'>
           <div class='col-sm-8'>
             <%= f.submit('Create Section', class: 'btn btn-primary btn-lg') %>
           </div>
         </div>
         <% end %>
         <div class='col-xs-4 offset-sm-2'>
             [ <%= link_to 'Return to active sections', @section %> ]
         </div>
</div>
