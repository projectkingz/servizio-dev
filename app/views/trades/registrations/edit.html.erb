<section class="hero is-primary is-fullheight">
  <div class="hero-body">
    <div class="container">
      <div class="columns is-centered">
        <div class="column is-8-table is-8-desktop is-8-widescreen">
          <div class="box">

            <div class="filed has-text-centered">
              <strong>Edit Trade/Business Details <%= resource_name.to_s.humanize %></strong>
            </div>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

                <div class="field">
                  <%= image_tag user_avatar(resource, 150), class: "rounded-circle" %>
                </div>
                <div class='field'>
                  <%= f.file_field :avatar, class: 'btn btn-outline-primary' %>
                </div>

            <div class="field">
               <%= f.label :full_name, class: "label" %>
               <%= f.text_field :full_name, class: 'input', autofocus: true, autocomplete: "full_name"  %>
            </div>


            <div class="field">
               <%= f.label :email, class: "label" %>
               <%= f.email_field :email, class: 'input', autofocus: true, autocomplete: "email"  %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="field">
              <%= f.label :password, class: "label" %> <i>(leave blank if you don't want to change it)</i><br />
              <% if @minimum_password_length %>
              <em><%= @minimum_password_length %> characters minimum</em>
              <%= f.password_field :password, class: 'input', autofocus: true, autocomplete: "new-password"  %>
              <% end %>
            </div>

              <div class="field">
                <%= f.label :password_confirmation, class: "label" %>
                <%= f.password_field :password_confirmation, class: 'input', autofocus: true, autocomplete: "new-password" %>
              </div>



              <div class="field">
                <%= f.submit "Update", class: 'button is-danger is-fullwidth' %>
             </div>
            <% end %>

            <br />

            <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'button is-warning is-fullwidth  m-t-10 m-b-10' %></strong>

            <br />
            <%= link_to "Back", :back, class: 'button is-fullwidth' %>
            </div>

          </div>
        </div>
      </div>
    </div>
</section>
