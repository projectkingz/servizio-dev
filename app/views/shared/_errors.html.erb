<% if obj.errors.any? %>
  <script>
    <% obj.errors.full_messages.each do |msg| %>
        new Noty ({
          type: 'error',
          layout: 'topRight',
          timeout: '3000',
          theme: 'sunset',
          text: '<%= msg %>'
        }).show()
      <% end %>
    </script>
<% end %>



