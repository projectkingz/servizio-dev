<section class="hero is-primary is-fullheight">
  <div class="hero-body">
    <div class="container">
      <div class="columns is-centered">
        <div class="column is-8-table is-8-desktop is-8-widescreen">
          <div class="box">

            <div class="filed has-text-centered">
              <strong>Client Sign In</strong>
            </div>



                  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

                    <div class="field">
                           <%= f.label :email, class: "label" %>
                           <%= f.email_field :email, class: 'input',  autofocus: true, autocomplete: "email" %>
                     </div>

                     <div class="field">
                            <%= f.label :password, class: "label" %>
                            <%= f.password_field :password, class: 'input',  autofocus: true, autocomplete: "current password" %>
                      </div>


                    <% if devise_mapping.rememberable? %>
                      <div class="field">
                        <%= f.check_box :remember_me %>
                        <%= f.label :remember_me %>
                      </div>
                    <% end %>

                    <div class="field">
                      <%= f.submit "Log in", class: 'button is-danger is-fullwidth' %>
                   </div>


                  <div class="field">
                    <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path, class: "button is-link is-fullwidth" %>
                  </div>

                  <% end %>

                  <!-- render "devise/shared/links" -->

          </div>
        </div>
      </div>
    </div>
  </div>
</section>
