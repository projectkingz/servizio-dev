<section class="section">
    <div class="container">
        <div class="columns">

            <!-- LEFT SIDE -->
            <div class="column is-one-third">
                <div class="columns is-multiline">

                    <!-- Top Card -->
                    <div class="column is-full">
                        <div class="card">

                            <!-- Avatar -->
                            <div class="card-content is-horizontal-center is-flex">
                              <figure class="image is-128x128">
                                <%= image_tag avatar_url(current_user), class:"is-rounded" %>
                              </figure>
                            </div>

                            <div class="card-content">

                                <!-- Upload Button -->
                                <div class="content has-text-centered">
                                  <p class="title is-5"><%= current_user.full_name %></p>
                                    <%= form_for :user, url: users_edit_url(current_user), action: :update, method: :post do |f| %>
                                    <div class="file">
                                      <label class="button is-primary is-outlined is-fullwidth">
                                        <%= f.file_field :avatar, class: "file-input", onchange: "this.form.submit();" %>
                                        <i class="fas fa-upload"></i>&nbsp;&nbsp;&nbsp;&nbsp;Upload Avatar
                                      </label>
                                    </div>
                                    <% end %>
                                </div>
                                <hr class="h-10">

                                <!-- Member -->
                                <article class="media">
                                  <div class="media-content">Member since</div>
                                  <div class="media-right">
                                    <strong><%= current_user.created_at.strftime('%b %Y') %></strong>
                                  </div>
                                </article>
                                <hr class="h-10">

                                <!-- From -->
                                <article>
                                  <div class="media">
                                    <div class="media-content">From</div>
                                      <div class="media-right">
                                        <strong><%= current_user.from %></strong> <i class="toggle far fa-edit" aria-controls="user-from"></i>
                                      </div>
                                    </div>
                                    <div class="content">
                                      <%= form_for :user, url: users_edit_url(current_user), action: :update, method: :post, html: {id: 'user-from', class: 'is-hidden'} do |f| %>
                                      <div class="field">
                                        <%= f.text_field :from, autofocus: true, autocomplete: 'form', class: 'input' %>
                                      </div>
                                        <a class="toggle button is-light" aria-controls="user-from">Cancel</a>
                                        <%= f.submit "Save", class: "button is-danger" %>
                                        <% end %>
                                    </div>
                                </article>
                                <hr class="h-10">

                                <!-- Online Status -->
                                <article>
                                  <div class="media">
                                    <div class="media-content">Online Status</div>
                                    <div class="media-right">
                                      <strong><% if current_user.status %>Online <% else %> Offline <% end %></strong> <i class="toggle far fa-edit" aria-controls="user-status"></i>
                                    </div>
                                  </div>

                                  <div class="content">
                                      <%= form_for :user, url: users_edit_url(current_user), action: :update, method: :post, html: {id: 'user-status', class: 'is-hidden'} do |f| %>
                                      <div class="field">
                                        <%= f.select(:status, options_for_select([["Online", true],["Offline", false]]), {} ,{class: "select is-fullwidth"}) %>
                                      </div>
                                        <a class="toggle button is-light" aria-controls="user-status">Cancel</a>
                                        <%= f.submit "Save", class: "button is-danger" %>
                                        <% end %>
                                    </div>

                                </article>
                            </div>
                        </div>
                    </div>

                    <!-- Bottom Card -->
                    <div class="column is-full">
                        <div class="card">
                            <div class="card-content">

                                <!-- About -->
                                <article>
                                  <div class="media">
                                    <div class="media-content">
                                      <P>
                                        <strong>About Yourself</strong>
                                        <br/>
                                        <%= current_user.about %>
                                      </p>
                                    </div>
                                      <div class="media-right">
                                        <i class="toggle far fa-edit" aria-controls="user-about"></i>
                                      </div>
                                    </div>
                                    <div class="content">
                                      <%= form_for :user, url: users_edit_url(current_user), action: :update, method: :post, html: {id: 'user-about', class: 'is-hidden'} do |f| %>
                                      <div class="field">
                                        <%= f.text_field :about, autofocus: true, autocomplete: 'form', class: 'input' %>
                                      </div>
                                        <a class="toggle button is-light" aria-controls="user-about">Cancel</a>
                                        <%= f.submit "Save", class: "button is-danger" %>
                                        <% end %>
                                    </div>
                                </article>
                                <hr class="h-10">

                                <!-- Languages -->
                                <article>
                                  <div class="media">
                                    <div class="media-content">
                                      <P>
                                        <strong>Language</strong>
                                        <br/>

                                      </p>
                                    </div>
                                      <div class="media-right">
                                        <%= current_user.language %></strong> <i class="toggle far fa-edit" aria-controls="user-language"></i>
                                      </div>
                                    </div>
                                    <div class="content">
                                      <%= form_for :user, url: users_edit_url(current_user), action: :update, method: :post, html: {id: 'user-language', class: 'is-hidden'} do |f| %>
                                      <div class="field">
                                        <%= f.text_field :language, autofocus: true, autocomplete: 'form', class: 'input' %>
                                      </div>
                                        <a class="toggle button is-light" aria-controls="user-language">Cancel</a>
                                        <%= f.submit "Save", class: "button is-danger" %>
                                        <% end %>
                                    </div>
                                </article>
                                <hr class="h-10">

                                <!-- Linked Account -->
                                <article class="media">
                                  <div class="content">
                                    <p>
                                      <strong>Linked Account</strong><br/>

                                        <% if current_user.uid %>
                                          <span class="has-text-success">Facebook Verified</span>
                                        <% else %>
                                          <%= link_to 'Connect to Facebook', user_facebook_omniauth_authorize_path, class: "has-text-danger" %>
                                        <% end %>


                                      </p>
                                  </div>
                                </article>

                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <!-- RIGHT SIDE -->
            <div class="column">
                <div class="columns is-multiline">

                  <!-- Create New Gig -->
                  <div class="column is-one-third has-text-centered">
                  <%= link_to new_listing_path do %>
                      <div class="card">

                        <div class="card-image card-content is-horizontal-center is-flex ">
                            <figure class="image is-128x128 ">
                                <%= image_tag 'icon_add.png' %>
                            </figure>
                        </div>

                        <div class="card-content">
                            <strong>Post a new job</strong>
                        </div>
                      </div>
                  <% end %>
                  </div>



                  <!-- Create New Gig -->
                  <div class="column is-two-third has-text-centered">
                  <%= link_to new_listing_path do %>
                      <div class="card">

                        <div class="card-image card-content is-horizontal-center is-flex ">
                            <figure class="image is-128x128 ">
                                <%= image_tag 'icon_add.png' %>
                            </figure>
                        </div>

                        <div class="card-content">
                            <strong>Post a new job</strong>
                        </div>
                      </div>
                  <% end %>
                  </div>





                </div>
            </div>


            <!-- Sample Gig -->
<% current_user.listings.each do |listing| %>
<div class="column is-one-third">
<div class="card">

<div class="card-image">
<%= link_to edit_listing_path(listing) do %>
<figure class="image is-4by3">
<%= image_tag listing_cover(listing) %>
</figure>
<% end %>
</div>

<div class="card-content p-t-5 p-b-5">
<p class="subtitle is-6 m-b-5"><%= link_to listing.title, listing_path(listing)  %></p>
<span class="star-review"><i class="fa fa-star"></i>
4.8 <span class="has-text-primary">(23)</span>
</span>
</div>

<footer class="card-footer">
<!-- @user_listings_pricings.price  -->

<a class="has-text-danger is-block card-footer-item has-text-right">


</a>

</footer>

</div>
</div>
<% end %>
        </div>
    </div>
</section>
