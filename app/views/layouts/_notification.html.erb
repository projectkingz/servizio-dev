<% unless flash.empty? %>
  <script>
  <% flash.each do |key, msg| %>
          <% type = key.to_s.gsub('alert','error').gsub('notice','success') %>
          new Noty ({
            type: '<%= type %>',
            layout: 'topRight',
            timeout: '3000',
            theme: 'sunset',
            text: "<%= msg %>"
          }).show();
        <% end %>
      </script>
<% end %>
