                                 <section class="section">
  <div class="container">
    <p class="title">Manage Supplier Quotes</p>

    <table class='table is-fullwidth'>
      <thead>
        <tr>
          <th>Date</th>
          <th>Supplier Name</th>
          <th>Title</th>
          <th>Due Date</th>
          <th>Amount</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <% if @quotes.blank? %>
          <tr>
            <td colspan='6' class='has-text-centered'><h1>No Supplier Quotes</h1></td>
          </tr>
        <% end %>
        <% @quotes.each do |q| %>
        <tr>
          <td><%= q.created_at.strftime('%d %b %Y') %></td>
          <td><%= q.supplier_name %></td>
          <td><%= link_to q.title, listing_path(q.listing) %></td>
          <td><%= q.due_date.strftime('%d %b %Y')  %></td>
          <td><%= q.amount  %></td>
          <td><span class="tag <%= 'is-warning' if q.inprogress? %> <%= 'is-success' if q.completed? %>">
                <%= q.status.capitalize %>
              </span>
          </td>
          <td>
            <%= link_to 'Mark Complete', nil, class: 'button is-small is-primary #{'is-hidden' if q.completed?}' %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</section>
