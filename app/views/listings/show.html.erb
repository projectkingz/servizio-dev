<%= render 'shared/categories' %>

<section class="section">
        <div class="columns">

            <!-- LEFT SIDE -->
            <div class="column is-two-thirds">
                <div class="columns is-multiline">

                    <!-- Listing Detail -->
                  <div class="column is-full">
                    <div class="card">
                      <div class="card-content">
                          <div class="content">
                          <p class="title is-4"><%= @listing.title %></p>
                          </div>
                          <hr>


                            <!-- Start Hero Carousel -->
                            		<section class="hero is-fullheight is-fullwidth">
                            			<div id="carousel-demo" class="hero-carousel">
                                    <% @listing.photos.each do |photo| %>
                                        <div class="has-background image is-16by9">
                                          <%= image_tag url_for(photo), class:"is-background", width:"100%" %>
                                        </div>
                                    <% end %>
                                    <% if @listing.video.present? %>
                                      <div class="video-container">
                                        <iframe src="https://www.youtube.com/embed/<%= @listing.video %>" allowfullscreen></iframe>
                                      </div>
                                    <% end %>
                            			</div>
                            			<div class="hero-head"></div>
                            			<div class="hero-body"></div>
                            			<div class="hero-foot"></div>
                            		</section>
                            		<!-- End Hero Carousel -->

                      </div>
                    </div>
                  </div>

                    <!-- About Section -->
                    <div class="column">
                      <div class="card">
                        <div class="card-content">
                          <article class="media">
                            <div class="media-content">
                              <p><strong>About This Listing</strong></p>
                              <hr>
                              <%= @listing.description %>
                            </div>
                          </article>
                        </div>
                      </div>
                    </div>

                </div>
            </div>

            <!-- RIGHT SIDE -->
            <div class="column is-one-third">
              <!-- Pricing Section -->
                <div class="columns is-multiline">
                      <div class="column is-full">

                          <div class="tabs is-fullwidth" id="tabs">
                              <ul>

                              </ul>
                          </div>

                          <div class="tabs-content">



                          </div>

                      </div>
                </div>

                  <!-- Profile Section -->
                <div class="columns is-multiline">

                      <div class="column is-full">
                          <div class="card">
                              <div class="card-content is-horizontal-center is-flex">
                                  <figure class="image is-96x96">
                                      <%= image_tag avatar_url(@listing.client), class: 'is-rounded' %>
                                  </figure>
                              </div>
                              <div class="card-content f-15">
                                  <div class="content has-text-centered">
                                      <p class="title is-5"><%= @listing.client.full_name %></p>
                                      <button class="button is-black is-outlined is-fullwidth">Contact me</button>
                                  </div>
                                  <article class="media">
                                      <div class="media-content">
                                          <i class="fas fa-user m-r-5"></i> Member since
                                      </div>
                                      <div class="media-right">
                                          <%= @listing.client.created_at.strftime('%b %Y') %>
                                      </div>
                                  </article>
                                  <article class="media">
                                      <div class="media-content">
                                          <i class="fas fa-map-marker-alt m-r-5"></i> From
                                      </div>
                                      <div class="media-right">
                                          <%= @listing.client.from %>
                                      </div>
                                  </article>
                                  <article class="media">
                                      <div class="media-content">
                                          <%= @listing.client.about %>
                                      </div>
                                  </article>
                              </div>
                          </div>
                      </div>
                </div>

                </div>
            </div>
</section>


<script src="https://cdn.jsdelivr.net/npm/bulma-carousel@4.0.4/dist/js/bulma-carousel.min.js"></script>
<script>
  bulmaCarousel.attach('#carousel-demo', {
    slidesToScroll: 1,
    slidesToShow: 1
  });

  $(document).ready(function() {
    $('#tabs li').on('click', function() {
       var type = $(this).data('tab');

       $('#tabs li').removeClass('is-active');
       $(this).addClass('is-active');

       $('.tab-content').hide();
       $('#tab-' + type).show();
    })
  })

</script>
