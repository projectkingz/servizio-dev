<%= render 'shared/errors', obj: @listing %>

<section class="section">
  <div class="container">
    <div class="steps" id="stepsDemo">

      <!-- 5 STEPS -->
      <div class="step-item is-active is-primary">
        <div class="step-marker">1</div>
        <div class="step-details">
          <p class="step-title">Overview</p>
        </div>
      </div>
      <div class="step-item">
        <div class="step-marker">2</div>
        <div class="step-details">
          <p class="step-title">Membership</p>
        </div>
      </div>
      <div class="step-item">
        <div class="step-marker">3</div>
        <div class="step-details">
          <p class="step-title">Description</p>
        </div>
      </div>
      <div class="step-item">
        <div class="step-marker">4</div>
        <div class="step-details">
          <p class="step-title">Gallery</p>
        </div>
      </div>
      <div class="step-item">
        <div class="step-marker">5</div>
        <div class="step-details">
          <p class="step-title">Publish</p>
        </div>
      </div>

      <!-- FORM TO CREATE A NEW listing HERE-->
      <%= form_for @listing, html: { class: "steps-content m-l-100 m-r-100"} do |f| %>
        <div class="form-group control col-md-12 mb-4">
          <label class="label">Give Your Job | Listing A Title</label>
          <%= f.text_field :title, autocomplete: "title", class: "form-control input is-focused" %>
        </div>

        <div class="form-group control col-md-12 mb-4">
          <%= f.label :category, 'Pick A Category Most Appropriate' %>
              <div class= 'is-focused field has-addons control is-expanded select is-fullwidth'>
                    <%= f.select(:category_id, options_for_select(@categories.map{ |c| [c.name, c.id] })) %>
              </div>
        </div>

        <div class="form-group control col-md-12 mb-4">
          <%= f.label :urgency, 'How Soon Do You Need This Done ' %>
              <div class= 'is-focused field has-addons control is-expanded select is-fullwidth'>
                    <%= f.select(:urgency_id, options_for_select(@urgencies.map{ |c| [c.name, c.id] })) %>
              </div>
        </div>

        <div class="field is-grouped is-grouped-centered m-t-25">
          <a href="" class="button is-light">Cancel</a>
          <%= f.submit "Save & Continue", class: "button is-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</section>
