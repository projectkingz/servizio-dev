<% @listings.each do |li| %>
      <div class = "row">
            <div class = "col-12">
                  <div class = "card bg-light mt-4">
                        <h5><div class = "card-header">placeholder</div></h5>
                            <div class = "card-body">
                                <div class = "listing-body">
                                    <div class = "card-title listing-title"><%= link_to li.title, listing_path(li) %></div>
                                    <p><div class = "card-text"><%= li.description %>
                                      <div class="listing-meta-details">
                                        <small>Created by:  <%= li.client.username if li.client %>,
                                                            <%= time_ago_in_words(li.created_at) %> ago,
                                            last updated:   <%= time_ago_in_words(li.updated_at) %> ago
                                        </small>
                                      </div>
                                    </div>
                                    <p><h5><%= li.budget %></h5>

  <% if li.category.present? %>
    <p>Category: <%= render li.category %></p>
  <% end %>


  <% if ( user_signed_in? && current_user == li.client ) || current_admin %>

      <div class="listing-actions">
      <%= link_to 'Edit this listing', edit_listing_path(li), class: "btn btn-xs btn-primary" %>
      <%= link_to 'Delete this listing', listing_path(li),
      method: :delete, data: { confirm: "Are you sure you want to delete the listing"}, class: "btn btn-xs btn-danger" %>
      </div>
  <% end %>
                                </div>
                          </div>
                  </div>
            </div>
      </div>
<% end %>
