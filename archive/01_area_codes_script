dial_book = {
  "new york" => "212",
  "newbrunswick" => "732",
  "edison" => "908",
  "plainsboro" => "609",
  "sanfrancisco" => "301",
  "miami" => "305",
  "paloalto" => "650",
  "evanston" => "847",
  "orlando" => "407",
  "lancaster" => "717"
}

#get city names from the hash
def get_city_names(somehash)
  somehash.keys
end


#get area code based on given hash and key
def get_area_code(somehash, key)
  somehash[key]
end

#execution flow
loop do

  puts "Do you want to to lookup an area code based on a city name? (Y/N)"
  answer = gets.chomp.downcase
  if answer != "y" then puts "Thanks for using the service"
  else if answer == "y" then
    puts get_city_names(dial_book)
    puts "Which city do you need the area code for ? Please enter option"
    selected_city = gets.chomp.downcase
    if dial_book.include?(selected_city)
      puts "The area code for #{selected_city} is #{get_area_code(dial_book, selected_city)}"
    else
      puts "The city entered is invalid"
    end
end
end
end
